<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GBpw2ivanov" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="coolNumberButton">
        <item name="android:backgroundTint">@color/number_button_background</item>
        <item name="android:textColor">@color/dark_slate_gray</item>
        <item name="android:textSize">@dimen/cool_number_button_size</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/pacifico</item>
        <item name="cornerRadius">@dimen/corner_radius_for_buttons</item>
    </style>

    <style name="coolMathSigns">
        <item name="android:backgroundTint">@color/signs_button_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/cool_number_button_size</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/pacifico</item>
        <item name="cornerRadius">@dimen/corner_radius_for_buttons</item>
    </style>

    <style name="coolNumberButtonLand">
        <item name="android:backgroundTint">@color/number_button_background</item>
        <item name="android:textColor">@color/dark_slate_gray</item>
        <item name="android:textSize">@dimen/cool_number_button_size_land</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/pacifico</item>
        <item name="cornerRadius">@dimen/corner_radius_for_buttons</item>
    </style>

    <style name="coolMathSignsLand">
        <item name="android:backgroundTint">@color/signs_button_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/cool_math_signs_size_land</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/pacifico</item>
        <item name="cornerRadius">@dimen/corner_radius_for_buttons</item>
    </style>

    <style name="buttonEqual">
        <item name="android:backgroundTint">@color/equal_button_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/pacifico</item>
        <item name="cornerRadius">40dp</item>
    </style>


</resources>